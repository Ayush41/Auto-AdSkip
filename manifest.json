{
  "manifest_version": 3,
  "name": "Auto-AdsSkip",
  "version": "1.1",
  "description": "Automatically skips ads when enabled",
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto AdSkip"
  }
}
