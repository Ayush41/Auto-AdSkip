{
  "manifest_version": 3,
  "name": "Auto Skip Ads (DOM)",
  "version": "1.0",
  "description": "Automatically clicks skip ad buttons when enabled",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Toggle Auto Skip"
  }
}
